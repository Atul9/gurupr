<%= content_for :header do %>
  <div class="container">
    <div class="page-header">
      <h1>Events</h1>
      <small>Manage events</small>

      <%= link_to new_admin_event_path, class: 'btn btn-primary pull-right' do %>
        <%= fa_icon 'plus', text: 'New event' %>
      <% end %>
    </div>
  </div>
<% end %>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Local</th>
      <th>Address</th>
      <th>Occurred at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.local %></td>
      <td><%= event.address %></td>
      <td><%= event.occurred_at %></td>
      <td>
        <%= link_to edit_admin_event_path(event), title: 'Edit event', class: 'btn btn-info btn-xs' do %>
          <%= fa_icon 'pencil-square-o' %>
        <% end %>
        <%= link_to [:admin, event], method: :delete, title: 'Delete event', class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } do %>
          <%= fa_icon 'trash' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
